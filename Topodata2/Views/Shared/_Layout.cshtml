                        <br/>
                        Email: <a href="mailto:info@topodata.com">info@topodata.com</a>
                    </address>
                    <div class="headline">
                        <h2>Mantente Conectado</h2>
                    </div>
                    <ul class="social-icons">
                        <li>
                            <a href="@urlTwitter" class="social_twitter" data-original-title="Twitter" target="_blank"></a>
                        </li>
                        <li>
                            <a href="@urlInstagram" class="social_instagram" data-original-title="Instagram" target="_blank"></a>
                        </li>
                        <li>
                            <a href="@urlYoutube" class="social_youtube" data-original-title="Youtube" target="_blank"></a>
                        </li>
                        <li>
                            <a href="@urlFacebook" class="social_facebook" data-original-title="Facebook" target="_blank"></a>
                        </li>
                        <li>
                            <a href="@urlFlickr" class="social_yahoo" data-original-title="Flickr" target="_blank"></a>
                        </li>
                        <li>
                            <a href="@urlFlipboard" class="social_deviantart" data-original-title="Flipboard" target="_blank"></a>
                        </li>
                        <li>
                            <a href="@urlGooglePlus" class="social_googleplus" data-original-title="Google+" target="_blank"></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!--/footer-->
    <div class="copyright">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p>
                        Copyright © 2016 TOPODATA. All Rights Reserved.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<!-- JS Global Compulsory -->
<script src="http://code.jquery.com/jquery-latest.min.js"></script>
<script src="~/resources/plugins/jquery/jquery-migrate.min.js"></script>
