@using Topodata2.Models.Service
<li class="dropdown">
    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">Servicios</a>
    <ul class="dropdown-menu">
        @foreach (var categorie in ServiceManager.GetAllCategories())
        {
            <li class="dropdown-submenu">
                <a href="javascript:void(0);">@categorie.Descripcion</a>
                <ul class="dropdown-menu">
                    @foreach (var subcategorie in ServiceManager.GetSubCategoriesByCategorieId(categorie))
                    {
                        <li>
                            <a href="#">@subcategorie.Descripcion</a>
                        </li>
                    }
                </ul>
            </li>
        }
    </ul>
</li>
