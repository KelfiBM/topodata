@model Topodata2.Models.ContactUsViewModel
@{
    ViewData["Title"] = "Contáctenos";
}
<div class="container content">
    <div class="row margin-bottom-30">
        <div class="col-md-9 mb-margin-bottom-30">
            <div id="map"
                 class="map map-box map-box-space margin-bottom-40"
                 style="position: relative; background-color: rgb(229, 227, 223); overflow: hidden">
            </div>
            @if (ViewData["Error"] != null)
            {
                <div class="alert alert-danger fade in alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <strong>Lo sentimos! </strong>
                    @ViewData["Error"]
                </div>
            }
            <h3>
                <strong>Haznos saber tus inquietudes e intentaremos responderte lo mas antes posible</strong>
            </h3>
            <br/>
            @using (Html.BeginForm("Contact", "Home", null, FormMethod.Post, new {@id = "sky-form3", @class = "sky-form contact-style"}))
            {
                <fieldset class="no-padding">
                    @Html.LabelFor(m => m.Nombre)
                    <div class="row sky-space-20">
                        <div class="col-md-7 col-md-offset-0">
                            <div>
                                @Html.EditorFor(m => m.Nombre, new {htmlAttributes = new {@id = "name", @class = "form-control", @name = "name"}})
                                @Html.ValidationMessageFor(m => m.Nombre, String.Empty, new {@class = "text-danger text-bold"})
                            </div>
                        </div>
                    </div>
                    @Html.LabelFor(m => m.Email)
                    <div class="row sky-space-20">
                        <div class="col-md-7 col-md-offset-0">
                            <div>
                                @Html.EditorFor(m => m.Email, new {htmlAttributes = new {@id = "mail", @class = "form-control", @name = "email"}})
                                @Html.ValidationMessageFor(m => m.Email, String.Empty, new {@class = "text-danger text-bold"})
                            </div>
                        </div>
                    </div>
                    @Html.LabelFor(m => m.Mensaje)
                    <div class="row sky-space-20">
                        <div class="col-md-7 col-md-offset-0">
                            <div>
                                @Html.EditorFor(m => m.Mensaje, new {htmlAttributes = new {@id = "message", @class = "form-control", @name = "message", @rows = "8"}})
                                @Html.ValidationMessageFor(m => m.Mensaje, String.Empty, new {@class = "text-danger text-bold"})
                            </div>
                        </div>
                    </div>
                    <button class="btn-u" type="submit">Enviar Mensaje</button>
                </fieldset>
            }
        </div>
        <div class="col-md-3">
            <div class="headline">
                <h2>Contacto</h2>
            </div>
            <ul class="list-unstyled who margin-bottom-30">
                <li>
                    <a href="#">
                        <i class="fa fa-home"></i>
                        Calle Ciriaco Ramírez No 19-B Sector Don Bosco, Distrito Nacional, Rep Dom, Zip-10201
                    </a>
                </li>
                <li>
                    <a href="mailto:info@topodata.com">
                        <i class="fa fa-envelope"></i>
                        info@topodata.com
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-mobile"></i>
                        809-519-4131
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-phone"></i>
                        809-687-7702
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-phone"></i>
                        809-682-8728
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Home")">
                        <i class="fa fa-globe"></i>
                        http://www.topodata.com
                    </a>
                </li>
            </ul>
            <div class="headline">
                <h2>Horario</h2>
            </div>
            <ul class="list-unstyled margin-bottom-30">
                <li>
                    <strong>Lunes-Viernes:</strong>
                    9:00am a 6:00pm
                </li>
            </ul>
        </div>
    </div>
</div>

@section cssPlugins{
    <link href="~/resources/plugins/sky-forms-pro/skyforms/css/sky-forms.css" rel="stylesheet" />
    <link href="~/resources/plugins/sky-forms-pro/skyforms/custom/custom-sky-forms.css" rel="stylesheet" />
}

@section cssPageStyle{
    <link href="~/resources/css/pages/page_contact.css" rel="stylesheet" />
}

@section cssTheme{
    <link href="~/resources/css/theme-skins/dark.css" rel="stylesheet" />
}

@section PageScripts{
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
    <script src="~/resources/plugins/gmap/gmap.js"></script>
    <script src="~/resources/plugins/sky-forms-pro/skyforms/js/jquery.form.min.js"></script>
    <script src="~/resources/js/forms/contact.js"></script>
    <script src="~/resources/js/pages/page_contacts.js"></script>
    
    
    <script src="~/resources/plugins/sky-forms-pro/skyforms/js/jquery.validate.min.js"></script>
    
    <script src="~/resources/js/plugins/validation.js"></script>
    
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
@section documentReady{
    ContactPage.initMap();
    ContactForm.initContactForm();
    Validation.initValidation();
    
}