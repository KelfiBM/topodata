    <script>
        $('.changeable').keyup(function () {
            if ($(this).val()) {
                $("#submitProfile").removeAttr('disabled');
                $("#submitProfile").removeAttr('style');
            }
        });
        $(document).on("click", "button[type='reset']", function (e) {
            $("#submitProfile").attr('disabled', "");
            $("#submitProfile").attr('style', "opacity: 0.5");
        });
    </script>
}