@using Topodata2.Models.Home
@{
    var list = HomeManager.GetAllOurTeam();
}
<div id="delete" class="profile-edit tab-pane fade">
    <h2 class="heading-md">Eliminar Equipo</h2>
    <p>Eliminar</p>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Cargo</th>
                <th>Correo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @if (list.Count > 0)
        {
            foreach (var value in list)
            {
                <tr>
                    <td>@value.Nombre</td>
                    <td>@value.Cargo</td>
                    <td>@value.Email</td>
                    <td>@Html.ActionLink("Eliminar", "DeleteOurTeam", "Administration", new { id = value.Id }, new { @class = "btn btn-danger btn-xs", @style = "color: #FFF" })</td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>